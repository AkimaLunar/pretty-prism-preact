{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "react/jsx-uses-vars": "error",
    // TODO: Configure ignore rule "react/no-unknown-property"
    "react/no-unknown-property": [0, { "ignore": "className" }]
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  }
}
